#include <stdio.h>
#include <stdlib.h>

int main() {
    int linhas, colunas, i, j;
    int **matriz;

    printf("Digite o n√∫mero de linhas e colunas: ");
    scanf("%d %d", &linhas, &colunas);

    matriz = (int **) malloc(linhas * sizeof(int *));
    for (i = 0; i < linhas; i++) {
        matriz[i] = (int *) malloc(colunas * sizeof(int));
    }

    // Preenche e exibe
    for (i = 0; i < linhas; i++) {
        for (j = 0; j < colunas; j++) {
            matriz[i][j] = i + j;
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    for (i = 0; i < linhas; i++) free(matriz[i]);
    free(matriz);

    return 0;
}